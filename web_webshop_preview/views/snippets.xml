<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="snippets" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_content']" position="after">
            <div id="snippet_theme" class="o_panel">
                <div class="o_panel_header">
                    <i class="fa fa-th-large"/> Product preview
                </div>
                <div class="o_panel_body">
                    <t t-snippet="web_webshop_preview.snippet_preview" t-thumbnail="/website/static/src/img/logo.png"/>
                </div>
            </div>
        </xpath>
    </template>

</odoo>